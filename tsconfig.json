{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "dom.iterable", "webworker"],
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "pretty": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/",
    "./src/types/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}
